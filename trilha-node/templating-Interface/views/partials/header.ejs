<header class="header">
    <div class="container">
        <h1>Meu Aplicativo CRUD</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/users">Listar Usuários</a></li>
                <li><a href="/users/add">Cadastrar Usuário</a></li>
                <% if (typeof dynamicMenuUsers !== 'undefined' && dynamicMenuUsers.length > 0) { %>
                    <li class="dropdown">
                        <a href="#">Usuários Recentes &#9662;</a>
                        <div class="dropdown-content">
                            <% dynamicMenuUsers.forEach(user => { %>
                                <a href="#"><%= user.name %></a>
                            <% }); %>
                        </div>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
</header>

<style>
    /* Estilo básico para o menu dinâmico */
    .header {
        background-color: #333;
        color: white;
        padding: 1rem 0;
    }
    .header .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .header nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
    }
    .header nav ul li {
        position: relative;
        margin-left: 20px;
    }
    .header nav ul li a {
        color: white;
        text-decoration: none;
        padding: 5px 10px;
        display: block;
    }
    .header nav ul li a:hover {
        background-color: #555;
        border-radius: 4px;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
        top: 100%; /* Abaixo do item do menu */
        left: 0;
    }

    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        text-align: left;
    }

    .dropdown-content a:hover {
        background-color: #ddd;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }
</style>